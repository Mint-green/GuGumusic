.detail_inf {
  position: fixed;
  top: 100%;
  height: 100%;
  width: 100%;
  z-index: 150;
  transition: all 0.5s;
}
.detail_inf .close-list {
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: 1;
}
.detail_inf .inf_wrapper {
  position: absolute;
  /*//bottom: -860rpx;*/
  bottom: 0;
  /*transform: translateY(860rpx);*/
  left: 0;
  right: 0;
  /* height: 960rpx; */
  width: 100%;
  background: #1c1c1c;
