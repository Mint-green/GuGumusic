  color: #f0f0f0;
}
.detail_inf .inf_wrapper .inf_wrapper_ele {
  height: 70rpx;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  border-bottom: solid rgba(255, 255, 255, 0.1) 1rpx;
