.first_tab .goods_item {
    display: flex;
    border-bottom: 1px solid #ccc;
    padding: 30rpx;
  }
  .first_tab .goods_item .goods_img_wrap {
    flex: 2;
    
    display: flex;
    justify-content: right;
    align-items: center;
  }
  .first_tab .goods_item .focus_id {
    flex: 5;
      display: flex;
      justify-content: left;
      align-items: center;
      font-size: 42rpx;
      color: #eee;
      
    }
  .first_tab .goods_item .goods_img_wrap image {
    width: 65%;
  }
  .first_tab .goods_item .goods_info_wrap {
    flex: 5;
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding: 10rpx;
  }
  .first_tab .goods_item .goods_info_wrap .goods_icon {
    margin-right: 10px;
    width: 55rpx;
    height: 55rpx;
    align-items: center;
  }
  .first_tab .goods_item .goods_info_wrap .goods_name {
    
    margin-right: 10px;
    color: #ccc;
    font-size: 35rpx;
    align-items: center;
  }
  .first_tab .goods_item .goods_info_wrap .goods_price {
    font-size: 35rpx;
    color: #ccc;
    align-items: center;
  }