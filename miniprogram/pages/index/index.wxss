/**index.wxss**/

.slider-wrapper {
  height: 300rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.recommend-list {
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ffcd32;
}

.recommend-list .item {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  padding: 0 40rpx 40rpx 40rpx;
}

.item .icon {
  -webkit-box-flex: 0;
  -ms-flex: 0 0 120rpx;
  flex: 0 0 120rpx;
  width: 120rpx;
  padding-right: 40rpx;
}

/* .item .icon .image {
  width: 120rpx;
  height: 120rpx;
} */

.item .text {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -ms-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  line-height: 20px;
  overflow: hidden;
  font-size: 28rpx;
  text-align: left;
}

.item .text .name {
  margin-bottom: 20rpx;
  color: #fff;
}

.item .text .desc {
  color: rgba(255, 255, 255, 0.3);
}

.search-wrapper {
  padding: 10rpx 30rpx;
  position: relative;
}

.search-wrapper .search {
  border-radius: 12rpx;
  border: 1px solid #333;
  font-size: 28px;
  height: 50rpx;
}

.placeholder {
  font-size: 28rpx;
  text-align: center;
}

.search-wrapper .icon-search {
  position: absolute;
  right: 40rpx;
  top: 20rpx;
}

.rank .toplist {
  height: 100%;
  overflow: hidden;
}

.hot-list {
  margin-top: 40rpx;
  margin-bottom: 40px;
}

.hot-list .list-title {
  height: 65px;
  line-height: 65px;
  text-align: center;
  font-size: 14px;
  color: #ffcd32;
  text-align: center;
  width: 100%;
  position: relative;
  margin-bottom: -40rpx;
}

.rank .toplist .item {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  margin: 0 40rpx;
  padding-top: 40rpx;
  height: 200rpx;
  border-radius: 3px;
}

.rank .toplist .item .icon image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 3px;
}

.rank .toplist .item .icon {
  /* -webkit-box-flex: 0; */
  /* -ms-flex: 0 0 100px; */
  /* flex: 0 0 100px; */
  width: 200rpx;
  height: 200rpx;
  padding-right: 0;
  border-radius: 3px;
}

.rank .toplist .item .songlist {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -ms-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
  padding: 0 20px;
  height: 200rpx;
  overflow: hidden;
  background: #333;
  color: rgba(255, 255, 255, 0.7);
  font-size: 12px;
}

.rank .toplist .item .songlist .song {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 26px;
}

.singer-type-wrapper {
  display: flex;
  width: 100%;
  margin-bottom: 40rpx;
  /* padding-right: 20rpx;
  padding-left: 20rpx; */
}

.singer-type {
  flex: 1;
  height: 80rpx;
  margin: 0 10rpx 0 10rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  display: flex;
  /* background-color: cadetblue; */
  /* background-image: linear-gradient(141deg, #9fb8ad 0%, #1fc8db 51%, #2cb5e8 75%); */
  justify-content: center;
  align-items: center;
}

.singger-list .list-title {
  height: 65px;
  line-height: 65px;
  text-align: center;
  font-size: 14px;
  color: #ffcd32;
  text-align: center;
  width: 100%;
}

.type1 {
  background-image: linear-gradient(141deg, #9fb8ad 0%, #44878f 51%, #689fb3 75%);
  margin-left: 30rpx;
}

.type2 {
  background-image: linear-gradient(141deg, #9fb8ad 0%, #884e77 51%, #622a64 75%);
}

.type3 {
  background-image: linear-gradient(141deg, #9fb8ad 0%, #2a7240 51%, #249959 75%);
}

.type4 {
  background-image: linear-gradient(141deg, #9fb8ad 0%, #815d3a 51%, #9b663b 75%);
  margin-right: 30rpx;
}

.myplaylist-wrapper {
  width: 100%;
  margin: 50rpx 0;
}

.myplaylist-title {
  height: 65px;
  line-height: 65px;
  text-align: center;
  font-size: 14px;
  color: #ffcd32;
  text-align: center;
  width: 100%;
}

.playlist-item {
  /* width:100%; */
  margin: 0 40rpx 0 40rpx;
  display: flex;
  /* justify-content: space-between; */
  padding: 2rpx;
  border-radius: 10rpx;
  background-color: #333333;
}

.playlist-pic {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90rpx;
  height: 90rpx;
  background-color: rgb(255, 159, 171);
  border-radius: 10rpx;
}

.lovelist-pic {
  width: 40rpx;
}

.playlist-text {
  width: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
}

.playlist-name {
  color: rgb(230, 230, 230);
  font-size: 30rpx;
}

.playlist-length {
  color: rgb(210, 210, 210);
  font-size: 20rpx;
}

.nosonglist {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20px;
  height: 200rpx;
  overflow: hidden;
  background: #333;
  color: rgba(255, 255, 255, 0.8);
}

.songlistname {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.songlistupdateFrequency {
  color: rgba(255, 255, 255, 0.6);
  font-size: 20rpx;
}

.fold-display {
  position: absolute;
  top: 25px;
  right: 22px;
  width: 18px;
}

.playlistcopywriter {
  color: rgba(255, 255, 255, 0.3);
  font-size: 20rpx;
}

.playlistname {
  font-size: 25rpx;
  margin-bottom: 10rpx;
}

.loading-container {
  margin-top: 40rpx;
}