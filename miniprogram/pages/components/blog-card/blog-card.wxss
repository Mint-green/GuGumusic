.blog {
  padding: 20rpx;
  background: #fff;
  font-family: Arial,
    "PingFang SC",
    "Hiragino Sans GB",
    "STHeiti",
    "Microsoft YaHei",
    "WenQuanYi Micro Hei",
    sans-serif;
  color: #333333;
  border-radius: 20rpx 20rpx 0 0;
}

.blog-title {
  display: flex;
  position: relative;
}

.blog-box {
  flex-direction: column;
  align-items: center;
}

.blog-user {
  font-size: 32rpx;
  font-family: "微软正黑体", "Microsoft YaHei";
  font-weight: 500;
}

.blog-time {
  color: #a0a0a0;
  font-size: 27rpx;
  margin-bottom: 4rpx;
}

.blog-author {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-top: 2rpx;
  border: 1px solid rgba(216, 30, 6, 0.4);
}

.blog-love {
  position: absolute;
  display: flex;
  align-items: center;
  top: 50%;
  right: 10rpx;
  transform: translateY(-50%);
}

.icon-dianzan {
  position: absolute;
  right: 90rpx;
  font-size: 54rpx;
  opacity: 0.7;
  color:#333333;
}

.love {
  color: #d81e06;
  opacity: 1;
  animation-duration: 1s;
  animation-name: lovesize;
  animation-fill-mode: forwards;
}

@keyframes lovesize {
  0% {
    font-size: 54rpx;
  }

  33% {
    font-size: 60rpx;
  }

  66% {
    font-size: 42rpx;
  }

  99% {
    font-size: 54rpx;
  }
}

.love-num {
  display: inline-block;
  font-size: 32rpx;
  width: 70rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  padding: 2rpx 8rpx;
  background: #e7e7e79a;
  color: rgba(216, 31, 6);
  margin-left: 10rpx;
  margin-top: 8rpx;
}

.bog-content {
  width: 100%;
  padding: 20rpx 4rpx;
  font-size: 30rpx;
}

.blog-img {
  box-shadow: 0 1px 1px 1px rgba(0, 0, 0, 0.1);
}

.blog-images .blog-img {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.blog-images .blog-img:nth-child(3n) {
  margin-right: 0;
}

.musicwrapper {
  width: 95%;
  margin: auto;
  display: flex;
  background-color: #f0f0f0;
  border: solid 8rpx #f0f0f0;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.musicwrapper .picandCtrl {
  width: 100rpx;
  height: 100rpx;
  position: relative;
}

.musicwrapper .picandCtrl .albumpic {
  width: 100rpx;
  height: 100rpx;
}

.musicwrapper .picandCtrl .control {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.musicwrapper .picandCtrl .control .playbtn {
  width: 50rpx;
  height: 50rpx;
  /* width: 100rpx; */
  /* height: 100rpx; */
  font-size: 50rpx;
  border-radius: 25rpx;
  color: #e2e2e2;
  background-color: rgba(0, 0, 0, 0.3);
}

.musicwrapper .picandCtrl .control .stopbtn {
  width: 50rpx;
  height: 50rpx;
  font-size: 50rpx;
  border-radius: 25rpx;
  color: #e2e2e2;
  background-color: rgba(0, 0, 0, 0.3);
}

.musicwrapper .infowrapper {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.musicwrapper .infowrapper .name {
  color: #515151;
  font-size: 25rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.musicwrapper .infowrapper .artandAlbum {
  color: #757575;
  font-size: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

