.container {
  padding: 20rpx;
}

.content {
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
  border: 1px solid rgb(218, 30, 5, .2);
  box-shadow: 1rpx 1rpx 1rpx 1rpx rgb(216, 30, 6, .4);
  margin-bottom: 20rpx;
  border-radius: 30rpx;
  padding: 20rpx;
  caret-color: rgb(216, 30, 6, .6);
}

.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx 10rpx 0 0;
  background: #f1f1f1;
}

/* 按钮类型 */

.public-type {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 60rpx;
  border-bottom: 1px solid #e0e0e0;
  padding-bottom: 30rpx;
}

.img-btn, .video-btn {
  background: #a7a6a6;
  color: #fff;
  font-size: 24rpx;
  font-family: Arial, "PingFang SC", "Hiragino Sans GB";
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 1rpx 1rpx 1rpx 1rpx rgba(0, 0, 0, .3)
}

.select-btn {
  background-color: #d81e06
}

.words-num {
  flex: 1;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right: 30rpx;
}

.send-btn {
  background: #d81e06;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
}

/* 图片列表 */

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-bottom: 80rpx;
}

.image-wrap, #myVideo {
  width: 220rpx;
  height: 220rpx;
  line-height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
}

.image {
  width: 100%;
  height: 100%;
}

.icon-shanchu {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: #000;
  opacity: 0.4;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}

.selectphoto {
  line-height: 220rpx;
  border: 1px dotted #ccc;
  border-radius: 30rpx;
}

.musicwrapper {
  width: 95%;
  margin: auto;
  display: flex;
  background-color: #353535;
  border: solid 8rpx #353535;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.musicwrapper .picandCtrl {
  width: 100rpx;
  height: 100rpx;
  position: relative;
}

.musicwrapper .picandCtrl .albumpic {
  width: 100rpx;
  height: 100rpx;
}

.musicwrapper .infowrapper {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.musicwrapper .infowrapper .name {
  color: #f2f0f0;
  font-size: 25rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.musicwrapper .infowrapper .artandAlbum {
  color: #919191;
  font-size: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}