.search-page {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    /* font-size: 12px; */
    background: #222;
}

.title{
    font-size: 28rpx;
}

.search-wrapper {
    padding: 10rpx 30rpx;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100rpx;
}

.search-wrapper .search {
    border-radius: 15rpx;
    border: 2rpx solid #333;
    flex: 1;
    font-size: 28rpx;
    padding-left: 20rpx;
    height: 60rpx;
}

.search-wrapper .button {
    width: 100rpx;
    height: 70rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: center;
    flex: 0 0 100rpx;
    color: #ffcd32;
}

.placeholder {
    font-size: 28rpx;
    text-align: center;
}

.searchsuggest {
    height: 70rpx;
    padding-left: 50rpx;
    font-size: 24rpx;
}

.main {
    padding: 0 30rpx;
}

.hot-wrapper .title{
    margin-bottom: 30rpx;
}

.hot-details {
    display: flex;
    flex-wrap: wrap;
    max-height: 240rpx;
    overflow: hidden;
    margin-bottom: 40rpx;
}

.hot-details .item {
    padding: 6rpx 20rpx;
    border: 2rpx solid #ffcd32;
    margin-right: 20rpx;
    border-radius: 20rpx;
    margin-top: 10rpx;
    font-size: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.history {
    margin-top: 30rpx;
}

.history .title {
    padding: 10rpx 0;
}

.history-wrapper {
    height: 55vh;
}

.history-wrapper .item {
    display: flex;
    padding: 20rpx 0;
    border-bottom: 1px solid rgba(255, 255, 255, .1);
}

.history-wrapper .item .txt {
    flex: 1;
    text-indent: 40rpx;
    font-size: 24rpx;
}

.history-wrapper .item .x {
    flex: 0 0 30rpx;
    padding: 0 20rpx;
}

.history .clear {
    width: 250rpx;
    margin: 0 auto;
    text-align: center;
    margin-top: 20rpx;
    color: #ffcd32;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}

.search-result-wrapper {
    width: 100%;
    position: fixed;
    height: 100%;
    top: 95rpx;
    background: #222;
    padding: 0 50rpx;
    font-size: 13px;
    color: rgba(255, 255, 255, 0.5);
}

.search-result-wrapper .singer-wrapper .item {
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    padding: 10rpx 0;
}

.search-result-wrapper .singer-wrapper .image {
    height: 90rpx;
    width: 90rpx;
    border-radius: 100%;
    margin-right: 30rpx;
}

.search-result-wrapper .song-wrapper .item {
    height: 70rpx;
    line-height: 70rpx;
}